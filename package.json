{
  "name": "nanobundle",
  "version": "0.0.28",
  "type": "module",
  "license": "MIT",
  "bin": "./bin.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/cometkim/nanobundle.git"
  },
  "author": {
    "name": "Hyeseong Kim",
    "email": "hey@hyeseong.kim"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepack": "yarn build",
    "build": "esbuild src/bin.ts --bundle --format=esm --platform=node --target=node14.8 --outfile=bin.mjs --external:meow --external:esbuild --external:browserslist --external:typescript --external:pretty-bytes --external:tsconfck",
    "dev": "vitest --watch",
    "test": "vitest",
    "changeset": "changeset"
  },
  "files": [
    "bin.mjs"
  ],
  "engines": {
    "node": ">=14.8.0"
  },
  "peerDependencies": {
    "typescript": "^3.7.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@cometjs/core": "^2.1.0",
    "browserslist": "^4.19.3",
    "esbuild": "^0.14.23",
    "meow": "^10.1.2",
    "pretty-bytes": "^6.0.0",
    "semver": "^7.3.8",
    "tsconfck": "^1.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "@types/node": "^17.0.18",
    "@types/semver": "^7.3.13",
    "c8": "^7.11.0",
    "pkg-types": "^1.0.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.2"
  },
  "packageManager": "yarn@3.3.0"
}
